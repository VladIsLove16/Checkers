@using WebApplication2.ViewModels
@using WebApplication2.Models
@model SettingGame
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Settings for arbiter / name players</title>
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="header_main" style="padding-bottom: 0.3rem">
        <div class="h3_and_burger">
            <h3 class="h3_turnirs">ТУРНИРЫ</h3>
            <a class="a_burger_header" href="@Url.Action("Index", "Home")">
                <img src="/img/ic_menu_48px.svg"
                     alt="Значок меню, возвращающий на главную страницу" />
            </a>
        </div>
        <div class="list_header" style="background-color: black">
            <h1 style="margin-top: 2rem; font-size: 4rem; margin-bottom: 0">
                АРБИТРИУМ
            </h1>
            <h2 style="font-size: 3rem; margin-top: 0">НАСТРОЙКИ ИГРЫ</h2>
        </div>
        <div class="a_profile_div">
            <a href="@Url.Action("Profile", "Home")" class="profile">
                <img class="profile-img"
                     src="/img/user.svg"
                     alt="значок профиля - кнопка, переход на профиль пользователя" />
            </a>
        </div>
    </header>
    <main class="main_sect">
        <ul class="list_settings">
            <li class="li_data_player">
                <h4 class="header-data-players">ДАННЫЕ УЧАСТНИКОВ</h4>
            </li>
            <li class="li_data_player">
                <ul>
                    @for(int i=0;i<Model.Members;i++)
                    {
                        <li class="player">
                            <label>
                                <input class="input_id_players"
                                       type="text"
                                       asp-for="Participants[i].Id"
                                       placeholder="id" />
                            </label><label>
                                <input class="input_name_players"
                                       type="text"
                                       asp-for="Participants[i].Name"
                                       placeholder="введите ФИО" />
                            </label>
                        </li>
                    }
                </ul>
            </li>
            <li class="li_data_player li_set_game"
                style="border: 0.1rem solid white">
                <a class="a_set_game" href="@Url.Action("SettingGameThird", "Home")">
                    <img src="/img/ic_content_paste_48px.svg" alt="" />
                    <h4>настройки турнира</h4>
                </a>
            </li>
        </ul>
    </main>
    <footer>
        <a class="back_strela"
           style="margin-left: 5rem; height: 5rem; display: block; width: 7rem"
           href="@Url.Action("SettingGameFirst", "Home")">
            <img src="/img/ic_forward_48px.svg"
                 alt="кнопка, возврающая на один шаг назад (на прошлую страницу)" />
        </a>
    </footer>
</body>
</html>
