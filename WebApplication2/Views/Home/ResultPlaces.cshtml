            <td class="el_table_place score" id="score">14</td>
            <td class="el_table_place place" id="place">участник</td>
          </tr>
          <tr>
            <td class="el_table_place left_bottom" id="id">6</td>
            <td class="el_table_place FIO" id="fullName">ФИО</td>
            <td class="el_table_place" id="score">13</td>
            <td class="el_table_place place right_bottom" id="place">
